# AI Security Integration API Keys 
# Based on the requirements in .env.security_ai.template

# OpenAI API Key for GPT-4/GPT-4-Turbo
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Anthropic API Key for Claude models
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini API Key
# Get from: https://ai.google.dev/tutorials/setup
GEMINI_API_KEY=your-google-api-key

# AI Security Settings
# Optimized for detailed security analysis
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_DEFAULT_MODEL=gpt-4

# Security Analysis Settings
DETAILED_ANALYSIS=true
EXPLOITATION_DETAILS=true
REMEDIATION_CODE=true

# OWASP AI Security Scanner
OWASP_AI_SCANNER_KEY=your-owasp-ai-scanner-key
OWASP_AI_SCANNER_URL=https://api.owasp-ai-scanner.example/scan

# Arachni AI
ARACHNI_AI_KEY=your-arachni-ai-key
ARACHNI_AI_URL=https://api.arachni-ai.example/scan

# Deep Exploit
DEEP_EXPLOIT_KEY=your-deep-exploit-key
DEEP_EXPLOIT_URL=https://api.deep-exploit.example/analyze

# SecLists AI
SECLISTS_AI_KEY=your-seclists-ai-key
SECLISTS_AI_URL=https://api.seclists-ai.example/generate

# AI-Driven Fuzzer
AI_FUZZER_KEY=your-ai-fuzzer-key
AI_FUZZER_URL=https://api.ai-fuzzer.example/fuzz

# Neural Recon
NEURAL_RECON_KEY=your-neural-recon-key
NEURAL_RECON_URL=https://api.neural-recon.example/scan

# AI Security Analysis API (used by AIVulnerabilityChecker)
AI_SECURITY_API_KEY=your-ai-security-api-key
AI_SECURITY_SERVICE_URL=https://api.ai-security-analysis.com/v1/analyze

# MongoDB Connection String
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/security_db

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=security_framework.log

# Security Platform Configuration
FLASK_SECRET_KEY=your-secure-secret-key
DEBUG=False

# API Keys for Security Services
SHODAN_API_KEY=your-shodan-api-key
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SECURITY_TRAILS_API_KEY=your-securitytrails-api-key

# ZAP Integration
ZAP_API_KEY=your-zap-api-key

# BeEF Framework Credentials
BEEF_USER=beef
BEEF_PASSWORD=your-secure-beef-password

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/security_platform
MONGODB_ENABLED=True

# Web Interface Settings
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Report Generation Settings
REPORT_OUTPUT_DIR=security_reports
REPORT_FORMATS=json,html,pdf
DETAILED_REPORTING=True

# Scan Settings
DEFAULT_SCAN_TIMEOUT=600
MAX_CONCURRENT_SCANS=5
SCAN_WORKERS=4
NMAP_ARGUMENTS=-sV -sC -O
MAX_THREADS=8
DEFAULT_PORT_RANGE=1-1000

# Module Activation
ENABLE_AI_SCANNER=True
ENABLE_COMPREHENSIVE_TESTER=True
ENABLE_VULNERABILITY_REPORTER=True

# Company Information for Reports
COMPANY_NAME=Security Assessment Team
REPORT_TITLE=Security Assessment Report
INCLUDE_EXECUTIVE_SUMMARY=True
INCLUDE_TECHNICAL_DETAILS=True
INCLUDE_REMEDIATION=True

# Advanced Settings
SECURITY_LOG_LEVEL=INFO
SAVE_RAW_SCAN_DATA=True
DEFAULT_SCAN_TYPE=standard